{
  "name": "@duneanalytics/sim-idx",
  "version": "1.0.0",
  "description": "A TypeScript library for writing Sim IDX apps",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.11.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "sim-idx", "dune"
  ],
  "author": {
    "name": "Dune",
    "url": "https://dune.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duneanalytics/sim-idx-ts.git"
  },
  "bugs": {
    "url": "https://github.com/duneanalytics/sim-idx-ts/issues"
  },
  "homepage": "https://github.com/duneanalytics/sim-idx-ts#readme",
  "peerDependencies": {
    "drizzle-orm": ">=0.44.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "hono": "^4.8.2",
    "pg": "^8.16.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "prettier": "^3.6.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "rm -rf dist && tsup src/index.ts",
    "prepublishOnly": "npm run build",
    "lint": "pnpm run '/^lint:.*$/'",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier --check src",
    "fix:prettier": "prettier --write src",
    "test": "pnpm vitest run --poolOptions.threads.maxThreads=8 --maxConcurrency=8 src"
  }
}
